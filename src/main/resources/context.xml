<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="t1000" class="ru.impl.robot.ModelT1000"
          p:hand-ref="toshibaHand"
          p:head-ref="toshibaHead"
          p:leg-ref="toshibaLeg" scope="prototype">
        <constructor-arg value="red"/>
        <constructor-arg value="true" index="2" type="boolean"/>
        <constructor-arg value="2006" type="int"/>
    </bean>

    <bean id="t1000E" class="ru.impl.robot.ModelT1000">
        <constructor-arg name="head" ref="sonyHead"/>
        <constructor-arg name="hand" ref="sonyHand"/>
        <constructor-arg name="leg" ref="sonyLeg"/>
    </bean>

    <bean id="sonyHead" class="ru.impl.sony.SonyHead"/>
    <bean id="sonyHand" class="ru.impl.sony.SonyHand"/>
    <bean id="sonyLeg" class="ru.impl.sony.SonyLeg"/>

    <bean id="toshibaHead" class="ru.impl.toshiba.ToshibaHead" scope="prototype"/>
    <bean id="toshibaHand" class="ru.impl.toshiba.ToshibaHand"/>
    <bean id="toshibaLeg" class="ru.impl.toshiba.ToshibaLeg"/>

</beans>